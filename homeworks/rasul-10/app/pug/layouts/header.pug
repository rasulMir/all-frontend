
mixin navigation(link,src, txt, active)
	if active < 2
		li.head-wrap__nav-link_active
			a.nav__list-link(class= link href='./' + src,)= txt
			block
	else
		li
			a.nav__list-link(class= link href='./' + src,)= txt
			block

mixin navPages(num,pages)
	- var q = 1;
	while q < num
		li(data-a= q++)
			a.head-wrap__list-sublink(href="#")= pages

