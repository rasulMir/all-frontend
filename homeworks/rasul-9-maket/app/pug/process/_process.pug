						span.process-wrap__text-circle-arrow
					+hoverCard('Молочное производство')
			.process-wrap__item
				+card('1', '1', 'Инвестор')
					span.process-wrap__text.process-wrap__text_right rubin
					span.process-wrap__circle-outer-arrow
					+hoverCard('Инвестор')
				+card('2', '2', 'Смарт контракт')
					span.process-wrap__text.process-wrap__text_top rubin
					span.process-wrap__text.process-wrap__text_left talon
					span.process-wrap__text.process-wrap__text_right rubin
					span.process-wrap__text.process-wrap__text_bttm rubin
					span.process-wrap__circle-outer-arrow
					+hoverCard('Смарт контракт')
				+card('5', '5', 'Розничная продажа')
					span.process-wrap__circle-outer-arrow
					+hoverCard('Розничная продажа')
			.process-wrap__item
				+card('3-bttm', '3','Розничная продажа')
					span.process-wrap__circle-outer-arrow
					+hoverCard('Розничная продажа')
				+card('1', '5', 'Инвестор')
